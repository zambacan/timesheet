<% provide(:title, 'All clients') %>

<% content_for :sidebar do %> 
 <ul>
	<li>
		<%= link_to "New Client", "#", id: "new" %>
		<div class="tip" style="display: none;">
			<div class="left"></div>
			<div class="right">New Client</div>
		</div>
	</li>
</ul>
<% end %>


<h1>Clients</h1>
<%= currently_at 'Clients' %>
<%= form_tag clients_path, :method => 'get', :id => "clients_search" do %>
<p>
	<div class="input-append">
		<%= text_field_tag :search, params[:search], :class => "span4" %>
		<%= submit_tag "Search", :name => nil, :class => "btn" %>
	</div>
</p>
<% end %>

<ul class="clients">
	<% @clients.each do |client| %>
	<li>
		<%= link_to client.name, client  %>
		<%= link_to client.address, client  %>
	
		<% if client.contacts.any? %> 
			 <%= link_to client.contacts.first.full_name, client  %>
			<% end %>
	</li>
	<% end %>
</ul>

<%= will_paginate %>



